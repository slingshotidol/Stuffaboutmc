Script to make the server form/json ui work
import { world } from "@minecraft/server";
import { ActionFormData } from "@minecraft/server-ui";

world.afterEvents.itemUse.subscribe((event) => {
    const { source: player, itemStack } = event;

    if (itemStack.typeId === "minecraft:nether_star") {
        
        const singleButtonForm = new ActionFormData()
            .title("§l§eSingle Button")
            .button("§lConfirm"); // We only add one button.

        singleButtonForm.show(player).then(result => {
            if (result.canceled) {
                player.sendMessage("§cForm Canceled.");
            } else {
                // The selection will always be 0 since there's only one button.
                player.sendMessage("§aYou pressed the only button!");
            }
        });
    }
});
