{
	"namespace": "server_form",

	// 1. THE CONTENT: Using the Vanilla Button Template
	"my_custom_content": {
		"type": "stack_panel",
		// This is required so the button knows where to look for data
		"collection_name": "form_buttons",
		"size": ["100%", "100%"],
		"controls": [
			{
				// WE INHERIT FROM THE VANILLA BUTTON
				// This automatically gives us the correct background textures and sounds.
				"the_button@common_buttons.light_text_button": {
					"size": ["100%", "100%"], // "Fill it up"
					
					// KEY FIX 1: Link to the first button in your script
					"collection_index": 0,

					// KEY FIX 2: Provide the variables this template requires
					"$pressed_button_name": "button.form_button_click",
					"$button_text": "#form_button_text",
					
					// These two lines prevent the "Must define a binding name" crash
					"$button_text_binding_type": "collection",
					"$button_text_grid_collection_name": "form_buttons",

					"bindings": [
						{
							"binding_type": "collection_details",
							"binding_collection_name": "form_buttons"
						}
					]
				}
			}
		]
	},

	// 2. THE LOGIC (Unchanged)
	"long_form": {
		"type": "panel",
		"size": ["100%", "100%"],
		"controls": [
			{
				"default_form@common_dialogs.main_panel_no_buttons": {
					"$title_panel": "common_dialogs.standard_title_label",
					"size": [ 225, 200 ],
					"$text_name": "#title_text",
					"$child_control": "server_form.long_form_panel",
					"bindings": [
						{ "binding_name": "#title_text" },
						{
							"binding_type": "view",
							"source_property_name": "((#title_text - '§l§eSingle Button') = #title_text)",
							"target_property_name": "#visible"
						}
					]
				}
			},
			{
				"custom_form@common_dialogs.main_panel_no_buttons": {
					"$title_panel": "common_dialogs.standard_title_label",
					"size": [ 225, 200 ],
					"$text_name": "#title_text",
					"$child_control": "server_form.my_custom_content",
					"bindings": [
						{ "binding_name": "#title_text" },
						{
							"binding_type": "view",
							"source_property_name": "(#title_text = '§l§eSingle Button')",
							"target_property_name": "#visible"
						}
					]
				}
			}
		]
	}
}

{
	"namespace": "server_form",

	// 1. THE TEMPLATE
	"my_textured_button": {
		"type": "panel",
		"controls": [
			{
				// LAYER 1: The Vanilla Button (Background ONLY)
				"button_visuals@common_buttons.light_text_button": {
					"size": ["100%", "100%"],
					"anchor_from": "center",
					"anchor_to": "center",
					
					// FIX 1: REMOVED all text variables ($button_text, etc.)
					// We only keep the click logic. This stops the errors.
					"$pressed_button_name": "button.form_button_click",
					"bindings": [
						{
							"binding_type": "collection_details",
							"binding_collection_name": "form_buttons"
						}
					]
				}
			},
			{
				// LAYER 20: The Content Stack (Icon + Text)
				"centered_content": {
					"type": "stack_panel",
					"orientation": "vertical",
					"size": ["100%", "100%c"], 
					"anchor_from": "center",
					"anchor_to": "center",
					
					// FIX 2: Layer 20 ensures it sits ON TOP of the hover highlight
					"layer": 20, 
					
					"controls": [
						{
							// ICON WRAPPER
							"icon_wrapper": {
								"type": "panel",
								"size": ["100%", 64],
								"controls": [
									{
										"icon": {
											"type": "image",
											"size": [64, 64],
											"anchor_from": "center",
											"anchor_to": "center",
											"bindings": [
												{
													"binding_name": "#form_button_texture",
													"binding_name_override": "#texture",
													"binding_type": "collection",
													"binding_collection_name": "form_buttons"
												},
												{
													"binding_type": "view",
													"source_property_name": "(not ((#texture = '') or (#texture = 'loading')))",
													"target_property_name": "#visible"
												}
											]
										}
									}
								]
							}
						},
						{
							// GAP
							"gap": {
								"type": "panel",
								"size": ["100%", 5]
							}
						},
						{
							// TEXT LABEL
							"text": {
								"type": "label",
								"text": "#form_button_text",
								"size": ["100%", "default"],
								"text_alignment": "center",
								"font_scale_factor": 1.5,
								"color": [1.0, 1.0, 1.0],
								// Shadow helps it pop out from the background
								"shadow": true, 
								"bindings": [
									{
										"binding_name": "#form_button_text",
										"binding_type": "collection",
										"binding_collection_name": "form_buttons"
									}
								]
							}
						}
					]
				}
			}
		]
	},

	// 2. THE CONTENT
	"two_buttons_content": {
		"type": "panel",
		"size": ["100%", "100%"],
		
		"controls": [
			{
				// LEFT WRAPPER
				"left_wrapper": {
